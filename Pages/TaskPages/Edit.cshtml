@page
@model TaskApp.Pages.TaskPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="task.taskId" />
            <div class="form-group">
                <label asp-for="task.OwnerId" class="control-label"></label>
                <input asp-for="task.OwnerId" class="form-control" />
                <span asp-validation-for="task.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="task.taskTitle" class="control-label"></label>
                <input asp-for="task.taskTitle" class="form-control" />
                <span asp-validation-for="task.taskTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="task.taskDescription" class="control-label"></label>
                <input asp-for="task.taskDescription" class="form-control" />
                <span asp-validation-for="task.taskDescription" class="text-danger"></span>
            </div>
            <div>
                @Html.DropDownList("Users", ViewBag.Users as SelectList);
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
